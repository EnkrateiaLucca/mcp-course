# Environment Variables for Task Management MCP Server
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Render Configuration (automatically set by Render)
# PORT=8000
# RENDER_SERVICE_NAME=task-mcp-server

# Optional: Database Configuration (if using PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Application Settings
ENV=development  # Change to 'production' when deploying
LOG_LEVEL=info

# MCP Server Settings
MCP_SERVER_NAME=task-management-server
MCP_SERVER_VERSION=1.0.0

# Agent Settings (for local development)
AGENT_MODEL=gpt-4
AGENT_TEMPERATURE=0.7